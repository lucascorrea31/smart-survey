{
  "name": "smart-survey",
  "version": "1.0.0",
  "description": "Integration between a survey (as a Google Forms) and IA to generate good results and insights",
  "main": ".src/main.ts",
  "scripts": {
    "compile": "pnpm clean && tsc -p tsconfig.json",
    "build": "pnpm compile",
    "start": "npx tsx --env-file=.env --watch  src/main.ts",
    "swagger:create": "npx tsoa spec",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "fix": "gts fix",
    "clean": "gts clean",
    "lint": "gts lint",
    "pretest": "pnpm run build",
    "format": "prettier --write \"src/**/*.{ts,js,json,css,md}\"",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:run": "pnpm run typeorm -- migration:run -d src/shared/repository/app-data-source.ts",
    "migration:create": "pnpm run typeorm -- migration:create src/infrastructure/migrations/",
    "migration:show": "pnpm run typeorm -- migration:show -d src/shared/repository/app-data-source.ts"
  },
  "keywords": [],
  "author": "Lucas Tadeu Correa de Oliveira",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "helmet": "^8.0.0",
    "pino": "^9.6.0",
    "reflect-metadata": "^0.2.2",
    "sanitize-html": "^2.14.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "tsyringe": "^4.8.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@jest/types": "^29.6.3",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "@types/sanitize-html": "^2.13.0",
    "eslint": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "gts": "^6.0.2",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "pino-pretty": "^11.3.0",
    "prettier": "^3.5.1",
    "ts-jest": "^29.2.5",
    "ts-node": "10.9.2",
    "tsc-watch": "6.0.4",
    "typescript": "5.1.6"
  }
}